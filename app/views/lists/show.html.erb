<% if @list.photo.attached? %>
  <div class="card-category-film" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @list.photo.key, height: 300, width: 400, crop: :fill %>)">
    <p class="bookmarks-count"><%= @bookmarks.count %> <%= @bookmarks.count > 1 ? "movies" : "movie" %></p>
    <%= @list.name %>
    <%= link_to '<i class="fa-solid fa-circle-plus"></i> Add a new movie'.html_safe, new_list_bookmark_path(@list), class: 'btn-pl add-film' %>
  </div>
<% else %>
  <div class="card-category-film" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(#)">
    <p class="bookmarks-count"><%= @bookmarks.count %> <%= @bookmarks.count > 1 ? "movies" : "movie" %></p>
    <%= @list.name %>
    <%= link_to '<i class="fa-solid fa-circle-plus"></i> Add a new movie'.html_safe, new_list_bookmark_path(@list), class: 'btn-pl add-film' %>
  </div>
<% end %>


<div class="cards">
  <% @bookmarks.each do |bookmark| %>
    <div class="card" style="width: 18rem;">
      <div class="card">
        <img src="<%= bookmark.movie.poster_url %>" class="card-img-film" alt="...">
      </div>
      <div class="card-body">
        <div class="card-title">
          <p class="card-title"><%= bookmark.movie.title %></p>
          <p class="card-rate"><%= bookmark.movie.rating %><i class="fa-solid fa-star"></i></p>
        </div>
          <div class="card-content">
            <p class="card-text"><%= bookmark.movie.overview %></p>
          </div>
        <div class="card-bottom">
          <p class="card-text"><i class="fa-solid fa-quote-left"></i>  <%= bookmark.comment %></p>
          <%= link_to '<i class="fa-regular fa-trash-can"></i>'.html_safe, bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
      </div>
    </div>
  <% end %>
</div>
